<?xml version="1.0" encoding="UTF-8"?>
<config>
    <form>
		<name>FormName</name>
		<attributes>
			<method>post</method>
		</attributes>
		<fieldset>
			<name>fsTitle</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Title</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsCondition</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Condition</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsImages</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Images</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsSpecifics</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Specifics</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsDescription</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Description</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsPayments</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Payment</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsShipping</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Shipping Options</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsPlan</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Plan</legend>
			</options>
		</fieldset>
		<fieldset>
			<name>fsOthers</name>
			<type>Zend\Form\Fieldset</type>
			<options>
				<legend>Other Information</legend>
			</options>
		</fieldset>
		<element>
			<name>hiddenField</name>
			<type>Zend\Form\Element\Hidden</type>
		</element>
		<element>
			<name>csrf</name>
			<type>Zend\Form\Element\Csrf</type>
		</element>
		<element>
			<name>title</name>
			<type>Zend\Form\Element\Text</type>
			<fieldset>fsTitle</fieldset>
			<options>
				<label></label>
			</options>
			<attributes>
				<placeholder>e.g Nokia 5110</placeholder>
			</attributes>
		</element>
		<element>
			<name>condition</name>
			<type>Zend\Form\Element\Select</type>
			<fieldset>fsCondition</fieldset>
			<options>
				<label></label>
				<value_options>
					<new>New</new>
					<used>Used</used>
					<defective>Defective</defective>
				</value_options>
			</options>
		</element>
		<element>
			<name>description</name>
			<type>Zend\Form\Element\Textarea</type>
			<fieldset>fsDescription</fieldset>
			<options>
				<label></label>
			</options>
			<attributes>
				<style><![CDATA[min-width:800px;max-width:800px;height: 150px;]]></style>
			</attributes>
		</element>
		<element>
			<name>priceType</name>
			<type>Zend\Form\Element\Radio</type>
			<fieldset>fsPayments</fieldset>
			<options>
				<label>Price Type</label>
				<value_options>
					<fixed>Fixed Price</fixed>
					<negotiable>Negotiable</negotiable>
					<offer>Offer</offer>
				</value_options>
			</options>
		</element>
		<element>
			<name>price</name>
			<type>Zend\Form\Element\Number</type>
			<fieldset>fsPayments</fieldset>
			<options>
				<label>Price</label>
			</options>
			<attributes>
				<min>10</min>
				<max>100000</max>
				<steps>10</steps>
			</attributes>
		</element>
		<element>
			<name>postDuration</name>
			<type>Zend\Form\Element\Radio</type>
			<fieldset>fsPlan</fieldset>
			<options>
				<label></label>
				<value_options>
					<int_5>5 Days</int_5>
					<int_10>10 Days</int_10>
					<int_20>20 Days</int_20>
					<int_30>30 Days</int_30>
				</value_options>
			</options>
		</element>
	</form>
</config>